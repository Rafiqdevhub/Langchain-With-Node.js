# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=https://codify-omega.vercel.app,http://localhost:3000

# Google API Configuration
GOOGLE_API_KEY=your-google-api-key

# Arcjet Security Configuration
ARCJET_KEY=your_arcjet_api_key_here
ARCJET_ENV=development
ARCJET_MODE=LIVE

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_AI_MAX_PROD=20
RATE_LIMIT_AI_MAX_DEV=50
RATE_LIMIT_DAILY_WINDOW_MS=86400000
RATE_LIMIT_AI_DAILY_MAX=50

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
PROFILE_RATE_LIMIT_MAX=20